#Reload Sxhkd
super + Escape
	pkill -USR1 -x sxhkd

#Set an Alarm
ctrl + alt + shift + a
	alarm-dmenu

#Prompt Shutdown
ctrl + shift + alt + q
	exec prompt "Are you sure you want to shutdown?" "sudo shutdown -h now"

#Find Files
ctrl + shift + F1
	st -e xdg-open "$(find . -type d \( -path ./.local/lib -o -path ./.Desktop/Topper/vision \) -prune -false -o -type f  | dmenu -p "Open File:")"

