#Toggle Ibus-daemon
alt + shift + ctrl + i
	 pgrep ibus-daemon && killall -9 ibus-daemon && notify-send "Ibus-daemon" "Off" || ibus-daemon -d && notify-send "Ibus-daemon" "On" && remaps

#Toggle Bandwidth
alt + shift + n
	pgrep bandwidth || bandwidth && killall sleep

